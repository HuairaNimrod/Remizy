<%- include('partials/header') -%>

  <h1 class="flex justify-left text-[#D32D27] font-bold my-8">Profile Information</h1>
  <% if (usersInfo.venmoUser == ""){ %>
    <p class="text-center  text-[#D32D27] font-mono font-ligth text-xs">Please complete your profile before continue!</p>
  <% } %>
  <p></p>
  <div class="flex justify-center">
    <div class="m-4 w-full">
        <h4 class="text-left text-[#D32D27] font-mono mt-4">Name</h4>
        <p class="w-full my-2 mb-4 text-gray-400"><%=usersInfo.nickname%></p>
        <h4 class="text-left text-[#D32D27] font-mono mt-4">Venmo Account</h4>
        <% if (usersInfo.venmoUser == ""){ %>
          <p class="w-full my-2 mb-4 text-gray-400">@add_Venmo_Account_example</p>
        <% } else { %>
          <p class="w-full my-2 mb-4 text-gray-400"><%=usersInfo.venmoUser%></p>  
        <% } %>
        <h4 class="text-left text-[#D32D27] font-mono mt-4">Email</h4>
        <p class="w-full my-2 mb-4 text-gray-400"><%=usersInfo.email%></p>
        
    </div>
  </div>

  <div class="flex justify-center py-8">
    <div class="flex justify-center w-52 border-2 bg-[#D32D27] mr-4 rounded-lg">
        <a href="/profileedit"
        class="text-white p-2">Edit Information</a>
    </div>
  </div>
    
   

 

<%- include('partials/footer') -%>
